[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "krx-alertor-modular"
version = "0.0.0"
description = "Adapter packaging for NEW CLI layout"
requires-python = ">=3.8"
readme = "README.md"
authors = [{name = "Hyungsoo"}]

[project.optional-dependencies]
backtest = []
tuning = []

[project.scripts]
app-alerts = "app.cli.alerts:run"
app-backtest = "app.cli.backtest:run"

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
addopts = "-v --tb=short"
